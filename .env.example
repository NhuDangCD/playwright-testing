# Environment Variables for Test Automation
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control

# Test User Credentials (for login tests)
TEST_USER_EMAIL=your_test_email@example.com
TEST_USER_PASSWORD=your_secure_password

# Default Test Credentials (fallback)
DEFAULT_TEST_EMAIL=test@test.com
DEFAULT_TEST_PASSWORD=Test@123

# Save registered users to .env file
# Set to 'true' to automatically append newly registered users to .env
# Set to 'false' to only save to userData.json
SAVE_TO_ENV=false

# Application Settings
BASE_URL=http://localhost:4200

# Test Execution Settings
HEADLESS=false
SLOW_MO=0
TIMEOUT=30000

# Browser Settings
BROWSER=chromium

# Reporting
GENERATE_REPORT=true
SCREENSHOT_ON_FAILURE=true

# API Settings (if needed)
API_BASE_URL=http://localhost:3000/api
API_KEY=your_api_key_here

# Database Connection (if needed for test data setup)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_password

# Feature Flags
ENABLE_ACCESSIBILITY_TESTS=true
ENABLE_PERFORMANCE_TESTS=false
ENABLE_SECURITY_TESTS=true

# Parallel Execution
WORKERS=4
RETRIES=1

# Note: Sensitive data like passwords should be stored securely
# Consider using a secrets management service for production environments